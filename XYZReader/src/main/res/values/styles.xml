<resources>

    <style name="Theme.Bacon" parent="Theme.Bacon.Base" />

    <style name="Theme.Bacon.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Bacon.Detail" />

    <style name="Theme.Bacon.LightProgressBar" parent="Widget.AppCompat.ProgressBar" />

    <style name="Theme.Bacon.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Bacon.Transparent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="Theme.Bacon.Transparent.ActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="Theme.Bacon.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
